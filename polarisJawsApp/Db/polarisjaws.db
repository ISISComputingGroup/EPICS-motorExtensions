# Polaris jaw set Soft motor record
#
#  Macros:
#    P - base name for ioc
#    MTR - the IOC postfix of the motor that is being used
#

record(calc,"$(P)JAWS:SET$(SET):$(DIR)") 
{ 
	field(MRES,"0.001") 
    field(RRES,"1.000") 
    field(PREC,"3")
	field(INPA, "$(P)$(MTR) CP")
	field(CALC, "A")
    field(EGU,"mm")
}

alias("$(P)JAWS:SET$(SET):$(DIR)", "$(P)JAWS:SET$(SET):$(DIR):SP")
alias("$(P)JAWS:SET$(SET):$(DIR)", "$(P)JAWS:SET$(SET):$(DIR):SP:RBV")

