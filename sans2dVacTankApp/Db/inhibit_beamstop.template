record(calcout, "$(FULL_PREFIX)INHIBIT_FRONTBEAMSTOP") {
    field(DESC, "Inhibit fbs move if -2 > det rot < 2")
    field(INPA, "$(P)FRONTDETROT CP")
    field(INPB, "$(P)FRONTDETROT:SP CP")
    field(CALC, "A < -2 || A > 2 || B < -2 || B > 2")
    field(OUT, "$(FULL_PREFIX)_INHIBIT_FRONTBEAMSTOP PP MS")
}

record(dfanout, "$(FULL_PREFIX)_INHIBIT_FRONTBEAMSTOP") {
    field(DESC, "Stop and inhibit fbs movement")
    field(DOL, "$(FULL_PREFIX)INHIBIT_FRONTBEAMSTOP")
    field(OUTA, "$(P)FRONTBEAMSTOP:MTR.STOP PP")
    field(OUTB, "$(P)FRONTBEAMSTOP:SP.DISP")
    field(OUTC, "$(P)FRONTBEAMSTOP.DISP")
    field(SELM, "All")
}
