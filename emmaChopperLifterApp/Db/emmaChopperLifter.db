# DB file for the EMMA fermi chopper lifter.
#
# Macros:
#   P - The pv prefix.
#   MTR - The motor that the chopper lifter uses.
#

record(scalcout, "$(P)LIFT:OUT") {
    field(AA, "#Park")
	field(OUT, "$(P)$(MTR):SEND_STR_CMD PP")
}

record(scalcout, "$(P)LIFT:IN") {
    field(AA, "#Clamp")
	field(OUT, "$(P)$(MTR):SEND_STR_CMD PP")
}

record(mbbi, "$(P)STATUS") {

    field(SCAN, "1 second")
	field(DTYP,"asynInt32")
	field(INP, "@asyn(Galil,0)USER_VAR status")

    field(ZRVL, "0")
    field(ZRST, "Unknown")
	
	field(ONVL, "1")
	field(ONST, "Clamped in beam")
	
	field(TWVL, "2")
	field(TWST, "Parked out of beam")
	
	field(THVL, "3")
	field(THST, "Moving up")
	
	field(FRVL, "4")
	field(FRST, "Moving down")
	
	field(FVVL, "5")
	field(FVST, "Error")
}
