# Separated out the readback for axes to easily test
record(ai, "$(P)$(CAL_AXIS):MTR:RBV")
{
	field(INP, "$(P)$(MTR).RBV CP MS")
    field(SIML, "$(P)$(CAL_AXIS):SIM")
    field(SIOL, "$(P)$(CAL_AXIS):SIM:MTR:RBV CP MS")
}

### SIM RECORDS ###
