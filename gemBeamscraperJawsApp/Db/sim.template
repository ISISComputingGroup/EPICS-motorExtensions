{
    field(SCAN, "Passive")
    field(DTYP, "Soft Channel")
    field(ZNAM, "NO")
    field(ONAM, "YES")
    field(VAL, "$(RECSIM=0)")
}

record(ai, "$(P)$(CAL_AXIS):SIM:MTR:RBV")
{
    field(SCAN, "Passive")
