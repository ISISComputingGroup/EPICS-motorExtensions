alias("$(P)$(O):THREAD", "$(P)$(O):THREAD:SP")
alias("$(P)$(O):THREAD", "$(P)$(O):THREAD:SP:RBV")

record(ai, "$(P)$(O):STEPS") {
    field(EGU, "")
