$(IFIOC_GALIL_01) dbLoadRecordsLoop("$(MOTIONSETPOINTS)/db/inPos.db","P=$(MYPVPREFIX)LKUP:MON3:,AXIS0=$(MYPVPREFIX)MOT:MON3,TOL=1,LOOKUP=LOOKUPFILE4","NUMPOS", 0, 30)
